<%= form_with(model: @post, local: true ,url: choose_new_or_edit ) do |form| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2>1文字以上140文字以下でつぶやいてください。</h2>
      <ul>
      <% @post.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="message">
    <h2>つぶやきを投稿</h2>
      <%= form.text_field :content %>
      <br><%= form.submit "投稿する" %></br>
  </div>
<% end %>

<div class ="info">
  <%= link_to '投稿一覧へ戻る', posts_path %>
